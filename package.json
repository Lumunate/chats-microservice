{
  "name": "chat-microservice",
  "version": "1.0.0",
  "description": "Real-time chat microservice with TypeScript, MongoDB, and Prisma",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "seed": "npx ts-node src/scripts/seed.ts",
    "seed:cleanup": "npx ts-node src/scripts/seed.ts --cleanup",
    "seed:postman": "npx ts-node src/scripts/seed.ts --postman",
    "setup:dev": "npm run seed",
    "setup:test": "AUTH_PROVIDER=mock npm run seed:postman",
    "setup:postman": "AUTH_PROVIDER=mock npm run setup:test"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "awilix": "^8.0.1",
    "axios": "^1.10.0",
    "cloudinary": "^2.6.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "iconv-lite": "^0.6.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.15.2",
    "next": "^14.0.4",
    "socket.io": "^4.7.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
